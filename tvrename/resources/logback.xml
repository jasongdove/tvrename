<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.ebml.matroska.MatroskaFile" level="info">
        <appender-ref ref="STDOUT" />
    </logger>

    <logger name="org.ebml.matroska.MatroskaFileTrack" level="info">
        <appender-ref ref="STDOUT" />
    </logger>

    <root level="debug">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>